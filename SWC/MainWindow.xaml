<Window x:Name="mainWindow" x:Class="SWC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWC"
        mc:Ignorable="d"
        Title="SimpleWebCrawler" Height="700" Width="800" MinWidth="800" MinHeight="700" Loaded="mainWindow_Loaded" WindowStartupLocation="CenterScreen" Closed="mainWindow_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Datei">
                <MenuItem Header="Beenden" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Info" Click="MenuItem_Click_1"/>
        </Menu>
        <StackPanel Grid.Row="1" CanVerticallyScroll="True">
            <Label Content="Url oder Datei" Margin="10,20,10,10"/>
            <TextBox x:Name="txtUrlOrFile" Margin="10" Padding="10"/>
            <Label Content="Füge einen/mehere CSS Selektoren, wie z. B. h1, h2, p oder einen benutzerdefinierte, wie #home, .blue etc. aus." Margin="10,20,10,10"/>
            <TextBox x:Name="txtSelectors" Margin="10" Padding="10" Height="200"/>
            <Label Content="Pfad, wo das Resultat gespeichert werden soll" Margin="10,20,10,10"/>
            <TextBox x:Name="txtOutput" Margin="10" Padding="10"/>
            <Button Name="btnCrawl" Content="Crawl" Margin="10" Padding="10" Click="btnCrawl_Click"/>
            <ProgressBar Name="pgbProgress" Margin="10" Height="30"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="SWC.WatchResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWC"
        mc:Ignorable="d" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" WindowState="Maximized" Title="Resultate im Detail">
    <Grid>
        <TabControl>
            <TabItem Header="Text">
                <TextBox Text="{Binding Details.Text}" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="innerHTML">
                <TextBox Text="{Binding Details.InnerHTML}" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="outerHTML">
                <TextBox Text="{Binding Details.OuterHTML}" IsReadOnly="True"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

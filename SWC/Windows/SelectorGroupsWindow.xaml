                                                                </ListBox.ItemTemplate>
                                                            </ListBox>
                                                        </GroupBox>
                                                        <TabControl
                                                            Name="tcFootPrints"
                                                            Grid.Column="1"
                                                            ItemsSource="{Binding ElementName=libResults, Path=SelectedItems}">

<Window
    x:Class="SWC.EditSelectorsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SWC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Selektorengruppen"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Header="Selektorgruppe(n)">
            <TextBox
                Name="txtSelectorGroups"
                Background="Azure"
                KeyUp="TxtSelectorGroups_KeyUp" />
        </GroupBox>
        <TabControl
            Name="tcSelectorGroups"
            Grid.Row="1"
            ItemsSource="{Binding SelectorGroups}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <ContentPresenter
                        Content="{Binding Name}"
                        Loaded="ContentPresenter_Loaded"
                        MouseLeftButtonDown="ContentPresenter_MouseLeftButtonDown" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <GroupBox
                                MinHeight="120"
                                Header="Standard Selektors">
                                <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Alle wählen"/>
                                    <CheckBox
                                        Name="chkSelectAllDefaultSelectors"
                                        Margin="0,0,0,5"
                                        VerticalAlignment="Center" />
                                </StackPanel>
                                <ListBox
                                        Name="libDefaultSelectors"
                                        MinHeight="120"
                                        MaxHeight="120"
                                        Margin="0,0,0,5"
                                        Loaded="LibDefaultSelectors_Loaded"
                                        SelectionMode="Multiple" />
                                </StackPanel>
                            </GroupBox>
                        <GroupBox
                            Grid.Column="1"
                                MinHeight="120"
                                Header="Benutzerdefinierte Selektoren">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Alle wählen"/>
                                    <CheckBox
                                        Name="chkSelectAllCustomSelectors"
                                        Margin="0,0,0,5"
                                        VerticalAlignment="Center" />
                                </StackPanel>
                                <ListBox
                                        Name="libCustomSelectors"
                                        MinHeight="120"
                                        MaxHeight="120"
                                        Margin="0,0,0,5"
                                        Loaded="LibCustomSelectors_Loaded"
                                        SelectionMode="Multiple" />
                                <TextBox
                                        Name="txtSelectors"
                                        Margin="0,0,0,5"
                                        Background="Azure"
                                        KeyUp="TxtSelectors_KeyUp" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="Optionen">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Crawl"/>
                                <CheckBox Name="chkCrawl" IsChecked="{Binding Crawl}" VerticalAlignment="Center"/>
                                <Label Content="Text"/>
                                <CheckBox Name="chkText" IsChecked="{Binding CrawlText}" VerticalAlignment="Center"/>
                                <Label Content="innerHTML"/>
                                <CheckBox Name="chkInnerHTML" IsChecked="{Binding CrawlInnerHTML}" VerticalAlignment="Center"/>
                                <Label Content="outerHTML"/>
                                <CheckBox Name="chkOuterHTML" IsChecked="{Binding CrawlOuterHTML}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </GroupBox>
                        <TabControl
                            Name="tcSelectors"
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            ItemsSource="{Binding Selectors}">
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentPresenter Content="{Binding CSSSelector}" MouseLeftButtonDown="ContentPresenter_MouseLeftButtonDown" />
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <GroupBox Header="Optionen">
                                            <StackPanel Orientation="Horizontal">
                                                <Label Content="Crawl"/>
                                                <CheckBox Name="chkCrawl" IsChecked="{Binding Crawl}" VerticalAlignment="Center"/>
                                                <Label Content="Text"/>
                                                <CheckBox Name="chkText" IsChecked="{Binding CrawlText}" VerticalAlignment="Center"/>
                                                <Label Content="innerHTML"/>
                                                <CheckBox Name="chkInnerHTML" IsChecked="{Binding CrawlInnerHTML}" VerticalAlignment="Center"/>
                                                <Label Content="outerHTML"/>
                                                <CheckBox Name="chkOuterHTML" IsChecked="{Binding CrawlOuterHTML}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                    </GroupBox>
                                    <DataGrid
                                        AutoGenerateColumns="False"
                                        Grid.Row="1"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding Results}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding CreationDate}" Header="Resultate vom" />
                                                <DataGridTemplateColumn Header="Scripts">
                                                    
                                                </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Details">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button
                                                            Name="btnShowResultDetails"
                                                            Click="BtnShowResultDetails_Click"
                                                            Content="Anzeigen" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    </Grid>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>

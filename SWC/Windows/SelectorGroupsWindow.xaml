                                                                    </Grid>

                                                                </DataTemplate>
                                                            </TabControl.ContentTemplate>
                                                        </TabControl>
                                                    </Grid>
                                                </DataTemplate>
                                            </TabControl.ContentTemplate>
                                        </TabControl>
                                    </Grid>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>

<Window x:Class="SWC.WatchResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWC"
        mc:Ignorable="d" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" WindowState="Maximized" Title="Resultate anschauen">
    <Grid>
        <TabControl>
            <TabItem Header="Text">
                <TextBlock Text="{Binding Details.Text}"/>
            </TabItem>
            <TabItem Header="innerHTML">
                <TextBlock Text="{Binding Details.InnerHTML}"/>
            </TabItem>
            <TabItem Header="outerHTML">
                <TextBlock Text="{Binding Details.OuterHTML}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
